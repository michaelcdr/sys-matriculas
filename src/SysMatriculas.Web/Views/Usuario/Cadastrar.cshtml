@model SysMatriculas.Web.Models.UsuarioCadastro

@{
    ViewData["Title"] = "Cadastro de usuário";
    Layout = "~/Views/Shared/_LayoutAdminLTE.cshtml";
}

<section class="content-header">
    <h1>
        Usuários
        <small>Cadastro de usuário</small>
    </h1>
    <ol class="breadcrumb">
        <li>
            <a asp-action="Index">
                <i class="fa fa-home"></i> Usuários
            </a>
        </li>
        <li class="active">
            Cadastro de usuário
        </li>
    </ol>
</section>
<section class="content container-fluid">
    <div class="box box-default color-palette-box">
        <div class="box-header with-border">
            <h3 class="box-title">
                Informe os dados abaixo e clique em salvar
            </h3>
        </div>
        <div class="box-body">
            <div class="row">
                <form asp-action="Cadastrar">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label asp-for="Login" class="control-label"></label>
                            <input asp-for="Login" class="form-control" />
                            <span asp-validation-for="Login" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label asp-for="CPF" class="control-label"></label>
                            <input asp-for="CPF" class="form-control" />
                            <span asp-validation-for="CPF" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label asp-for="Senha" class="control-label"></label>
                            <input asp-for="Senha" type="password" class="form-control" />
                            <span asp-validation-for="Senha" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label asp-for="SenhaConfirmacao" class="control-label">Confirmação de senha</label>
                            <input asp-for="SenhaConfirmacao" type="password" class="form-control" />
                            <span asp-validation-for="SenhaConfirmacao" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="clearfix"></div>

                    <div class="col-sm-6">
                        <div class="form-group">
                            <label asp-for="Nome" class="control-label"></label>
                            <input asp-for="Nome" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label asp-for="Sobrenome" class="control-label"></label>
                            <input asp-for="Sobrenome" class="form-control" />
                            <span asp-validation-for="Sobrenome" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="clearfix"></div>


                    <div class="col-sm-6">
                        <div class="form-group">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label asp-for="Sexo" class="control-label"></label>
                            <select asp-for="Sexo" class="form-control" asp-items="Model.SexosDisponiveis">
                                <option value="">Selecione...</option>
                            </select>
                            <span asp-validation-for="Sexo" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="clearfix"></div>

                    <div class="col-sm-12">
                        <div class="form-group">
                            <a class="btn btn-warning" asp-action="Index"><i class="fa fa-chevron-left"></i></a>
                            <input type="submit" value="Cadastrar" class="btn btn-primary" />
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        
    </script>
}
