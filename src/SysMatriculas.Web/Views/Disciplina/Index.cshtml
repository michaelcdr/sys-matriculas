
@{
    ViewData["Title"] = "Lista de Disciplinas";
    Layout = "~/Views/Shared/_LayoutAdminLTE.cshtml";
}
<link href="~/lib/datatables/datatables.1.10.13.min.css" rel="stylesheet" />

<section class="content-header">
    <h1>
        Disciplinas
        <small>Lista de Disciplinas</small>
    </h1>
    <ol class="breadcrumb">
        <li>
            <a asp-action="Index">
                <i class="fa fa-home"></i> Disciplinas
            </a>
        </li>
        <li class="active">
            Lista de Disciplinas
        </li>
    </ol>
</section>
<section class="content container-fluid">
    @Html.AntiForgeryToken()
    
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="form-group form-inline">
                        <label class="control-label">Pesquisa:</label>
                        <input class="form-control" id="pesquisa" name="pesquisa" />

                        <label class="control-label">Currículo:</label>

                        <select id="curriculoId" name="curriculoId" class="form-control">
                            <option value="">Selecione</option>
                            @foreach (var item in (List<KeyValuePair<string,string>>)ViewBag.Curriculos)
                            {
                                <option value="@item.Value">@item.Key</option>
                            }
                        </select>
                    </div>
                    <table id="tb-disciplina"
                           class="table table-striped table-bordered "
                           style="width:100%">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Nome</th>
                                <th>Curriculo</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                        
                    </table>
                </div>
            </div>
        </div>
        <div class="col-md-12">
            <p>
                <a class="btn btn-primary" asp-controller="Disciplina"
                   asp-action="Cadastrar">Cadastrar</a>
            </p>
        </div>
    </div>
</section>
@section Scripts {
    @{await Html.RenderPartialAsync("_ListScriptsPartial");}
    <script src="~/js/disciplinas/DisciplinasLista.js"></script>
    <script>
        window.dataTablesAux = new DataTablesAuxiliadores();
        window.disciplinasLista = new DisciplinasLista();
    </script>
}
